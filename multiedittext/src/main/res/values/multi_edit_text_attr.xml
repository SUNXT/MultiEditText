        <!-- Cancel ImageView -->
        <attr name="showCancelButton" format="boolean"/>
        <attr name="cancelButtonSrc" format="integer"/>
        <attr name="cancelButtonSize" format="dimension"/>

        <!-- EditText -->
        <attr name="hint" format="string|integer"/>
